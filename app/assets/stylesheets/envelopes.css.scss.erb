// Place all the styles related to the Envelopes controller here.

#dashboard {
  position: relative;

  ul {
    list-style: none;
    padding: 0;

    a {
      display: block;
      text-decoration: none;
      padding: 3px 10px;
      margin: 0 -10px;

      &:hover {
        background: #f1f1f1;
      }
    }
  }

  li {
    .name {
      display: block;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      padding-right: 5px;
    }
    .amount {
      float: right;
      font-size: 90%;
    }
  }

  > ul {
    /* For CSS columns
    -webkit-column-count: 4;
    -webkit-column-gap:   10px;
    -moz-column-count:    4;
    -moz-column-gap:      10px;
    column-count:         4;
    column-gap:           10px; */

    // To prevent jQuery/masonry.js from making the box around system envelopes look funny during transition
    overflow-x: visible !important;
    overflow-y: visible !important;

    .system {
      background: #f1f1f1;
      margin: 0 -10px 20px;
      padding: 5px 10px;

      ul {
        border: 0;

        a:hover {
          padding: 3px 6px;
          margin: 0 -6px;
          background: #fff;
        }
      }
    }

    > li {
      /* For CSS columns
      display: inline-block;
      width: 100%; */
      float: left;
      width: 250px;
      font-size: 21px;
      font-weight: 300;
      padding-bottom: 20px;
      > a {
        color: #000;
        > .amount {
          display: none;
        }
        > .name {
          padding-right: 0;
        }
      }
      > ul {
        font-weight: normal;
        border-top: solid 1px #d0d0d0;
        > li {
          font-size: 16px;
          > ul {
            border-top: dotted 1px #d0d0d0;
            padding-bottom: 5px;
            > li {
              font-size: 12px;
            }
          }
        }
      }
    }
  }
}

