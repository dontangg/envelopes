#fill_envelopes {
  padding: 0 2% 0 0;
  float: left;
  width: 79%;

  header {
    padding-bottom: 2%;
  }

  ul {
    padding: 0;
    margin: 0;
    list-style: none;
  }

  form > ul {
    padding-bottom: 15px;

    > li {

      > table .name {
        padding-left: 3px;
      }

      > ul > li {
        > table .name {
          padding-left: 28px;
        }

        > ul > li {
          > table .name {
            padding-left: 53px;
          }
        }
      }
    }
  }

  table {
    width: 100%;

    &.header {
      font-weight: 300;
      border-bottom: solid 1px #d0d0d0;
    }

    &:not(.header):hover {
      background: #f1f1f1;

      .info {
        visibility: visible;
      }
    }

    .info {
      visibility: hidden;
    }

    .expand-collapse {
      width: 16px;
    }
    .name {
      width: 39%;
    }
    .balance, .budget, .to-fund {
      width: 15%;
    }
    .sum {
      width: 15%;
      padding: 5px 8px;
    }
    .input {
      width: 15%;

      input {
        width: 85%;
        max-width: 80px;

        &:not(:focus) {
          background: transparent;
        }
      }
    }
  }
}
#fill_aside {
  float: left;
  width: 18.5%;

  header {
    padding-bottom: 8.5%;
  }

  table {
    width: 100%;

    th {
      font-weight: 300;
      padding: 0 5px 0 0;
    }

    .total {
      border-top: solid 1px #d0d0d0;
    }
  }
}
#manage_envelopes {
  float: left;
  width: 79%;
  padding-right: 2%;

  header {
    padding-bottom: 2%;
  }

  ul {
    font-size: 14px;
    margin: 0;
    padding: 0;
    list-style: none;
    border-top: solid 1px #ccc;

    li {
      &.alt {
        background: #f1f1f1;

      }
      &:hover .destroy, &:hover .note.note-blank {
        visibility: visible;
      }
    }
  }

  table {
    width: 100%;

    .envelope-actions, .envelope-note {
      width: 3%;
      min-width: 26px;
      text-align: right;
      padding: 3px 0;
      vertical-align: middle;
    }
    .name {
      width: 46%;

      &.indent-1 {
        padding-left: 30px;
      }
      &.indent-2 {
        padding-left: 50px;
      }

      input {
        width: 95%;
      }
    }
    .expense-amount {
      width: 20%;
      text-align: left;

      input {
        width: 75px;
      }
    }
    .expense-frequency {
      width: 28%;
    }

    th div, td div {
      padding: 3px 5px;
    }

    th {
      font-weight: 300;
      text-align: left;
      padding: 2px 10px;
    }

    td {
      padding: 2px 10px;
      vertical-align: bottom;

      .destroy, .note.note-blank {
        visibility: hidden;
      }

      &.expense-frequency div {
        cursor: pointer;
        &:hover {
          background: rgba(210, 210, 210, 0.2);
        }
      }

      input, select {
        background-color: transparent;
        border: 1px solid transparent;
        border-collapse: separate; /* needed for IE to display box-shadow */
        -webkit-appearance: initial;

        &:hover, &:focus {
          border-color: #6d9c00;
        }
      }
    }
  }
}
