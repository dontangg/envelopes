#sidebar {
  width: 15%;
  float: left;
  padding-right: 2%;
  border-right: solid 1px #ccc;

  .amount {
    display: none;
  }
  a {
    display: block;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }

  nav > ul > li {
    padding-bottom: 10px;

    > a {
      color: #000;
      border-bottom: solid 1px #ccc;
      font-weight: 300;
    }

    ul li {
      position: relative;
      ul {
        font-size: 80%;
        padding-bottom: 5px;
        position: absolute;
        z-index: 1000;
        width: 0;
        left: 110%;
        top: 3px;
        li {
          display: none;
          position: relative;
          z-index: 1001;
          padding: 3px 10px;
        }
        &:hover {
          //min-width: 150px;
          width: auto;
          li {
            display: block;
          }
          &:after {
            position: absolute;
            top: 0;
            z-indez: 99;
            background: #fff;
            content: '';
            border: solid 1px #ccc;
            width: 100%;
            height: 100%;
          }
        }
        &:before {
          content: '';
          position: absolute;
          top: 6px;
          left: -10px;
          padding: 0 3px 0 0;
          border: 4px solid transparent;
          border-width: 4px 6px;
          border-left-color: #6d9c00;
        }
      }
    }
  }
}

#envelope_details {
  padding: 0 2%;
  float: left;
  width: 60%;

  header {
    padding-bottom: 10px;

    .balance {
      float: right;
    }
  }

  form {
    position: relative;
    min-height: 64px;

    .loading-overlay {
      position: absolute;
      width: 100%;
      height: 100%;
      background: #fff url(<%= asset_path('loading_64x64.gif') %>) no-repeat center center;
      display: none;
    }
  }

  table#transactions_list {
    width: 100%;
    font-size: 14px;
    clear: both;

    tr.alt {
      background: #f1f1f1;
    }

    td {
      padding: 2px 10px;

      &.posted-at {
        width: 10%;
        min-width: 50px;
        padding-bottom: 6px;
        padding-top: 6px;
      }
      &.payee {
        width: 40%;
      }
      &.envelope {
        width: 40%;
      }
      &.amount {
        width: 10%;
        min-width: 55px;

        input {
          max-width: 80px;
        }
      }

      input, select {
        width: 95%;
        background-color: transparent;
        border: 1px solid transparent;
        border-collapse: separate; /* needed for IE to display box-shadow */
        -webkit-appearance: initial;

        &:hover, &:focus {
          border-color: #6d9c00;
        }
      }
    }
  }
}

#envelope_aside {
  float: left;
  width: 18.5%;

  ul {
    list-style: none;
    margin: 0;

    a {
      display: block;
    }
  }

  h2 {
    border-bottom: 1px solid #ccc;
    margin-bottom: 5px;
  }
  table {
    width: 100%;
  }
  th {
    font-weight: 300;
    width: 60px;
  }
  td, th {
    padding-top: 6px;
  }
  .graph-monthly-spending {
    font-size: 12px;
    position: relative;

    th {
      width: 18px;
      text-align: center;
    }
    .budget-line {
      position: absolute;
      left: 80px;
      border-right: 1px solid #6a0aab;
      width: 0;
      height: 100%;
    }
    .budget-amount {
      position: absolute;
      top: 100%;
    }
    .chart-bar {
      box-sizing: border-box;
      float: left;
      padding: 1px 5px;
      margin-right: 3px;
      overflow: hidden;
      text-overflow: ellipsis;
      text-align: right;
      background: #ddd;
      height: 1.6em;
    }
    .alt {
      background: #a8f000;
    }
  }
}

#date_range_picker {
  float: right;
  position: relative;
  padding-bottom: 5px;

  .current {
    font-size: 12px;
    color: #999;
    padding: 1px 3px;
    cursor: pointer;
    border: 1px solid transparent;

    &:hover {
      border-color: #d0d0d0;
    }
  }

  .popup {
    display: none;
    position: absolute;
    right: 0;
    top: 25px;
    border: 1px solid #d0d0d0;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 5px #999;
    white-space: nowrap;
    font-size: 14px;

    .start {
      font-size: 10px;
      display: inline-block;
    }
    .end {
      font-size: 10px;
      display: inline-block;
      padding-left: 20px;
    }
    .options {
      padding: 20px 0 0;
    }
    .actions {
      padding: 20px 0 0;
      text-align: right;

      a {
        margin-right: 15px;
      }
    }
  }

  .ui-widget-content {
    border: 0;
  }
  .ui-state-active {
    background: #6d9c00;
    border-color: #2d5c00;
    color: #fff;
  }
  .ui-datepicker table {
    margin: 0;
  }
  .ui-helper-clearfix:after {
    display: none;
  }
  .ui-widget {
    font-family: "Open Sans", Helvetica, Arial;
  }
}

.ui-autocomplete {
  font-size: 12px;
}
