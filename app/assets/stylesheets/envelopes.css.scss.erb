#sidebar {
  width: 15%;
  float: left;
  padding-right: 2%;
  border-right: solid 1px #ccc;
  
  .amount {
    display: none;
  }
  a {
    display: block;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
  }
  
  nav > ul > li {
    padding-bottom: 10px;
    
    > a {
      color: #000;
      border-bottom: solid 1px #ccc;
      font-weight: 300;
    }
    
    ul ul {
      border-top: dotted 1px #ccc;
      font-size: 80%;
      padding-bottom: 5px;
      display: none;
    }
  }
}

#envelope_details {
  padding: 0 2%;
  float: left;
  width: 60%;
  
  header {
    padding-bottom: 10px;
  }
  
  table.transactions {
    width: 100%;
    font-size: 14px;
    
    tr.alt {
      background: #f1f1f1;
    }
    
    td {
      padding: 2px 10px;
      
      &.posted-at {
        width: 10%;
        min-width: 50px;
      }
      &.payee {
        width: 40%;
      }
      &.envelope {
        width: 40%;
      }
      &.amount {
        width: 10%;
        min-width: 55px;
      }
      
      input {
        width: 95%;
        background-color: transparent;
        border-color: transparent;
        border-collapse: separate; /* needed for IE to display box-shadow */

        &:hover, &:focus {
          border-color: #6d9c00;
        }
      }
    }
  }
}

#envelope_aside {
  float: left;
  width: 18.5%;
  
  ul {
    list-style: none;
    margin: 0;
    
    a {
      display: block;
    }
  }
}

#date_range_picker {
  float: right;
  position: relative;
  padding-bottom: 5px;
  
  .current {
    font-size: 12px;
    color: #999;
    padding: 1px 3px;
    cursor: pointer;
    border: 1px solid transparent;

    &:hover {
      border-color: #d0d0d0;
    }
  }
  
  .popup {
    display: none;
    position: absolute;
    right: 0;
    top: 25px;
    border: 1px solid #d0d0d0;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 5px #999;
    white-space: nowrap;
    font-size: 14px;
    
    .start {
      font-size: 10px;
      display: inline-block;
    }
    .end {
      font-size: 10px;
      display: inline-block;
      padding-left: 5px;
    }
    .actions {
      padding: 20px 0 0;
      text-align: right;
      vertical-align: middle;

      a {
        margin-right: 15px;
      }
    }
  }
  
  .ui-widget-content {
    border: 0;
  }
  .ui-state-active {
    background: #6d9c00;
    border-color: #2d5c00;
    color: #fff;
  }
  .ui-datepicker table {
    margin: 0;
  }
  .ui-helper-clearfix:after {
    display: none;
  }
  .ui-widget {
    font-family: "Open Sans", Helvetica, Arial;
  }
}
