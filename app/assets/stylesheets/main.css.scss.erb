*, *:before, *:after {
  -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
}

body {
  font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  padding-top: 70px;
  -webkit-font-smoothing: antialiased;
}

.bg-dark {
  color: #c4d0d9;
  background-color: #1c2b36;

  a {
    color: #c4d0d9 !important;
  }
}

.app-aside, .navbar-header {
  width: 200px;
}

.navbar-brand {
  font-size: 20px;
  font-weight: 700;
}

.navbar-right {
  margin-right: 0;
}

.navbar-default .nav > li > a:hover, .navbar-default .nav > li > a:focus {
  background-color: #f6f8f8;
}

.box-shadow {
  box-shadow: 0 2px 2px rgba(0,0,0,0.05),0 1px 0 rgba(0,0,0,0.05);
}

.bg-white {
  background-color: #fff;
}

a {
  text-decoration: none;
  color: #363f44;

  &:hover {
    text-decoration: underline;
  }
}







.margin-below {
  margin-bottom: 15px;
}
.alert h4 {
  margin-top: 0;
}
.ui-front { // To get selectToAutocomplete suggestions to appear on top
  z-index: 1100;
}
.btn-glyphicon-spacer {
  width: 40px;
  display: inline-block;
}


.field, .actions {
  clear: both;
  padding: 0.5em 0;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 300;
}

th {
  text-align: left;
}

.positive-number {
  color: #6d9c00;
}

.negative-number {
  color: #fc3f4d;
}

.amount {
  text-align: right;
  white-space: nowrap;

  input {
    text-align: right;
  }
}

.loading {
  width: 32px;
  height: 32px;
  background: url(<%= image_path("loading_32x32.gif") %>) no-repeat center center;
  display: none;
  vertical-align: bottom;
  margin-right: 5px;
}

.autosave-status, .status {
  color: #999;
  font-size: 12px;
}

footer {
  font-size: 12px;
  padding: 15px 0 20px;
  text-align: center;
  color: #999;
}
