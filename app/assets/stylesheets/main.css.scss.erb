*, *:before, *:after {
  -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
}

body {
  font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  padding-top: 50px;
  position: relative; // To get the footer to the bottom, etc.
  -webkit-font-smoothing: antialiased;
}

a {
  text-decoration: none;
  color: #363f44;

  &:hover {
    text-decoration: underline;
  }
}


// Generic classes

.box-shadow {
  box-shadow: 0 2px 2px rgba(0,0,0,0.05),0 1px 0 rgba(0,0,0,0.05);
}

.bg-dark {
  color: #c4d0d9;
  background-color: #1c2b36;

  .text-muted {
    color: #5c798f;
  }
}

.bg-white {
  background-color: #fff;
}

.badge-error {
  background-color: #f05050;
}


// Navbar

.app-aside, .navbar-header {
  width: 200px;
}
.navbar-collapse, .app-content, .app-footer {
  margin-left: 200px;
}

.navbar {
  border-width: 0;
}
.navbar-brand {
  color: #c4d0d9 !important;
  background: url(<%= image_path("icon.svg") %>) no-repeat 10px 15px;
  background-size: 30px;
  padding-left: 45px;
  font-size: 20px;
  font-weight: 700;
}

.navbar-right {
  margin-right: 0;
}

.navbar-default .nav > li > a {
  color: #363f44;
  &:hover, &:focus {
    background-color: #f6f8f8;
  }
}



.app-aside {
  float: left;

  // To make the column 100% high
  &:before {
    position: absolute;
    top: 0;
    bottom: 0;
    z-index: -1;
    width: inherit;
    background-color: inherit;
    border: inherit;
    content: "";
  }

  nav {
    padding-top: 20px;
  }

  .nav-cat > span {
    display: block;
    font-size: 12px;
    margin-bottom: 10px;
    margin-top: 10px;
    padding-left: 8px;
    padding-right: 15px;
  }

  .nav > li > a {
    color: #869fb1;
    transition: background-color .2s ease-in-out 0s;
    &:hover, &:focus {
      background-color: #16232d;
    }
  }
  .nav > li.active > a {
    color: #fff;
    background-color: #131e26;
    &:hover, &:focus {
      background-color: #16232d;
    }
  }
  .active .nav-sub {
    display: block;
  }
  .nav-sub {
    background-color: #131e26;
    display: none;

    li a {
      padding-left: 30px;
    }
  }

  .line {
    background-color: #131e26;
    font-size: 0;
    height: 2px;
    margin: 10px 0;
    overflow: hidden;
    width: 100%;
  }
}


.app-content {
  height: 100%;

  &:before, &:after {
    display: table;
    content: " ";
  }
  &:after {
    clear: both;
  }
}




// Footer
footer.app-footer {
  background-color: #edf1f2;
  border-top: 1px solid #dee5e7;
  bottom: 0;
  color: #58666e;
  left: 0;
  padding: 15px;
  position: absolute;
  right: 0;
  z-index: 1005;
}



