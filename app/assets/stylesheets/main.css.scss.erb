*, *:before, *:after {
  -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
}

.margin-below {
  margin-bottom: 15px;
}
.alert h4 {
  margin-top: 0;
}
.ui-front { // To get selectToAutocomplete suggestions to appear on top
  z-index: 1100;
}
.btn-glyphicon-spacer {
  width: 40px;
  display: inline-block;
}


.field, .actions {
  clear: both;
  padding: 0.5em 0;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 300;
}

a {
  text-decoration: none;
  color: #6d9c00;

  &:hover {
    text-decoration: underline;
  }
}

th {
  text-align: left;
}

.positive-number {
  color: #6d9c00;
}

.negative-number {
  color: #fc3f4d;
}

.amount {
  text-align: right;
  white-space: nowrap;

  input {
    text-align: right;
  }
}

.loading {
  width: 32px;
  height: 32px;
  background: url(<%= image_path("loading_32x32.gif") %>) no-repeat center center;
  display: none;
  vertical-align: bottom;
  margin-right: 5px;
}

.autosave-status, .status {
  color: #999;
  font-size: 12px;
}

footer {
  font-size: 12px;
  padding: 15px 0 20px;
  text-align: center;
  color: #999;
}
