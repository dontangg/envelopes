#page {
  margin: 2% auto;
  width: 90%;
}
.clear {
  clear: both;
}

nav#header_nav {
  background: #f1f1f1;
  font-size: 12px;
  padding: 10px 5%;
  box-shadow: 0 0 6px #aaa;

  li {
    display: inline;
    padding: 0 8px;
  }
  h1 {
    display: inline;
    font-size: 14px;
  }
}

header h1 {
  display: inline;
  padding-right: 15px;
}

.account-nav {
  float: right;
}

.logo {
  padding-left: 0;

  a {
    color: #000;
  }
}

.field, .actions {
  clear: both;
  padding: 0.5em 0;
}

h1, h2, h3, h4 {
  font-weight: 300;
}

a {
  text-decoration: none;
  color: #6d9c00;

  &:hover {
    text-decoration: underline;
  }
}

h1 {
  font-size: 24px;
}
h2 {
  font-size: 20px;
}
h3 {
  font-size: 18px;
}

th {
  text-align: left;
}

.positive-number {
  color: #6d9c00;
}

.negative-number {
  color: #fc3f4d;
}

.amount {
  text-align: right;
  white-space: nowrap;
  
  input {
    text-align: right;
  }
}

.flash {
  text-align: center;
  position: absolute;
  z-index: 2000;
  top: 0;
  width: 100%;
  
  nav+& {
    top: 25px;
  }
  
  div {
    padding: 5px 10px;
    display: inline-block;
    box-shadow: 0 0 5px #999;
  }

  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  &.alert {
    div {
      background-color: #f99;
    }
  }
  
  &.notice {
    div {
      background-color: #ffc;
    }
  }
}

#overlay {
  z-index: 999;
  background: #666;
  position: absolute;
  top: 0;
  left: 0;
}

#modal {
  background: #fff;
  position: fixed;
  z-index: 1000;
  left: 50%;
  padding: 20px;
  
  h1 {
    margin-top: 0;
  }
  
  .loading {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 32px;
    height: 32px;
    background: url(<%= image_path("loading_32x32.gif") %>) no-repeat center center;
    display: none;
  }
}

.autosave-status {
  color: #999;
  font-size: 12px;
}

footer {
  font-size: 12px;
  padding: 15px 0 20px;
  text-align: center;
  color: #999;
}
