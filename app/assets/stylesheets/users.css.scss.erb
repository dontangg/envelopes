#account {
  header {
    padding-bottom: 2%;
  }
  
  label {
    display: inline-block;
    width: 155px;
  }

  .multi-line {
    label {
      display: block;
      width: auto;
    }
  }

  ul.questions {
    list-style: none;
    margin: 16px 0 0;

    li {
      padding: 5px 0;
    }
  }
  
  input[type=text], input[type=password], input[type=email], select {
    width: 300px;
  }
  
  .field_with_errors {
    display: inline;
  }

  input[type=submit] {
    margin-right: 15px;
  }

}

#modal.import-modal {
  text-align: center;
  .special-loading {
    width: 100%;
    height: 100px;
    background: #fff url(<%= asset_path('loading_64x64.gif') %>) no-repeat center center;
  }
}

#error_explanation {
  color: #fc3f4d;
}
