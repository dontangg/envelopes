#account {
  header {
    padding-bottom: 2%;
  }
  
  label {
    display: inline-block;
    width: 155px;
  }

  .multi-line {
    label {
      display: block;
      width: auto;
    }
  }

  ul.questions {
    list-style: none;
    margin: 16px 0 0;

    li {
      padding: 5px 0;
    }
  }

  .destroy {
    background: url(<%= asset_path("trash_stroke_16x16_light.png") %>) no-repeat center center;
    display: inline-block;
    width: 16px;
    height: 16px;
    
    &:hover {
      background-image: url(<%= asset_path("trash_stroke_16x16.png") %>);
    }
  }
  
  input[type=text], input[type=password], input[type=email], select {
    width: 300px;
  }
  
  .field_with_errors {
    display: inline;
  }
}

#error_explanation {
  color: #fc3f4d;
}