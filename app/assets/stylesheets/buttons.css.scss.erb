.button {
  display: inline-block;
  background: #f1f1f1 none no-repeat 5px center;
  padding: 3px 6px;
  color: #444;
  text-shadow: 1px 1px 0 #fff;
  box-shadow: 0 0 2px #999;
  vertical-align: text-bottom;
  
  &.manage {
    background-image: url(<%= asset_path('cog_alt_12x12.png') %>);
    padding-left: 22px;
  }
  
  &.transfer {
    background-image: url(<%= asset_path('loop_alt4_16x12.png') %>);
    background-position: 10px center;
    padding-left: 33px;
  }
  
  &:hover {
    background-color: #ddd;
    text-decoration: none;
  }
}
