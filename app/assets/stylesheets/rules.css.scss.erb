// Place all the styles related to the rules controller here.

#rules {
  float: left;
  width: 79%;
  padding-right: 2%;
  
  table {
    width: 100%;
    font-size: 14px;
    
    tr.alt {
      background: #f1f1f1;
    }
    
    tr:hover .destroy {
      display: block;
    }

    th {
      padding: 5px 15px;
      font-weight: 300;
    }

    td {
      padding: 2px 10px;
      
      &.actions {
        width: 18px;
      }
      &.search-text, &.replacement-text, &.envelope {
        width: 32%;
      }
      
      .destroy {
        background: url(<%= asset_path("trash_stroke_16x16.png") %>);
        display: none;
        width: 16px;
        height: 16px;
      }

      input, select {
        width: 95%;
        background-color: transparent;
        border: 1px solid transparent;
        border-collapse: separate; /* needed for IE to display box-shadow */
        -webkit-appearance: initial;

        &:hover, &:focus {
          border-color: #6d9c00;
        }
      }
    }
  }
}

#rules_aside {
  float: left;
  width: 18.5%;
  
  ul {
    list-style: none;
    margin: 0;
    
    a {
      display: block;
    }
  }
}