<%
  title "Log In"
%>

<section class='login-box'>
  <h1>Envelopes</h1>
  <%= form_tag login_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email], placeholder: 'email', :autofocus => true %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, placeholder: 'password' %>
    </div>
    <div class="actions"><%= submit_tag "Log In", class:'primary' %></div>
  <% end %>
</section>