<% title "Sign In" %>
<% show_mobile_head %>

<section class='login-box center-block'>
  <h1 class='text-center'>Envelopes</h1>
  <%= form_tag sign_in_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email], placeholder: 'email', autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, placeholder: 'password', class: 'form-control' %>
    </div>
    <%= submit_tag "Sign in", class:'btn btn-primary' %>
  <% end %>
</section>
