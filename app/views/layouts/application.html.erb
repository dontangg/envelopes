<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) + ' | ' if content_for?(:title)  %>Envelopes</title>
  <%= yield(:mobile_head) if content_for?(:mobile_head) %>

  <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300" rel="stylesheet" type="text/css" />
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <nav id='header_nav'>
    <ul class='account-nav'>
      <li><%= link_to current_user.email, edit_user_url(current_user_id) %></li>
      <li><%= link_to 'Log Out', logout_url %></li>
    </ul>
    <ul class='main-nav'>
      <li class='logo'>
        <%= link_to root_url do %>
          <h1>Envelopes</h1>
        <% end %>
      </li>
      <li><%= link_to 'Dashboard', root_url %></li>
      <li><%= link_to 'Fill Envelopes', fill_envelopes_url %></li>
      <li><%= link_to 'Rules', rules_url %></li>
    </ul>
  </nav>
<% end %>

<% if flash[:notice] %>
  <div class='flash notice'><div><%= flash.notice %></div></div>
<% end %>
<% if flash[:alert] %>
  <div class='flash alert'><div><%= flash.alert %></div></div>
<% end %>

<div id='page'>
<%= yield %>
<div class='clear'></div>
</div>

<footer>
  &copy; <%= Date.today.year %> Don Wilson
</footer>

</body>
</html>
