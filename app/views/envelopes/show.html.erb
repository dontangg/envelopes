<section id='sidebar'>
  <nav>
    <ul>
      <%= render partial: 'envelope', collection: @envelopes[nil], as: :envelope, locals: {envelopes: @envelopes} %>
    </ul>
  </nav>
</section>
<section id='envelope-details'>
  <header>
    <h1>
      <%= @envelope.name %>
      <span style='float:right;' class='<%= @envelope.total_amount < 0 ? "negative" : "positive" %>-number'>
        <%= number_to_currency(@envelope.total_amount) %>
      </span>
    </h1>
  </header>
  
  <table>
    <%= render @transactions %>
  </table>
</section>
<section id='envelope-aside'>
  <ul class='actions'>
    <li><a href='#' class='button transfer'>Transfer Money</a></li>
  </ul>
</section>
