<li>
  <a href='<%= envelope_path(envelope) %>'>
    <span class='amount'><%= number_to_currency(envelope.total_amount) %></span>
    <span class='name' title='<%= envelope.name %>'><%= envelope.name %></span>
  </a>
  <% unless envelopes[envelope.id].empty? %>
    <ul>
      <%= render partial: 'envelope', collection: envelopes[envelope.id], as: :envelope, locals: {envelopes: envelopes} %>
    </ul>
  <% end %>
</li>