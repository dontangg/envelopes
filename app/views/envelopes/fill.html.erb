
<section id='fill_envelopes'>
  <header>
    <h1>Fill Envelopes</h1>
  </header>
  
  <%= form_tag do %>
    <ul>
      <li>
        <table class='header'>
          <tr>
            <td class='name'>Envelope</td>
            <td class='amount balance'>Balance</td>
            <td class='amount budget'>Budget</td>
            <td class='amount to-fund'>To Fund</td>
            <td class='amount input'>Amount</td>
          </tr>
        </table>
      </li>
      <%= render partial: 'envelope_for_fill', collection: @organized_envelopes[nil], as: :envelope, locals: {organized_envelopes: @organized_envelopes} %>
    </ul>
  
    <%= submit_tag "Fill", class: 'primary' %>
    
  <% end %>
  
</section>
<section id='fill_aside'>
  Available Cash
</section>
